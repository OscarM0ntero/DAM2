package ratones;

import java.time.LocalDateTime;
import java.util.Calendar;

public class Main {
	
	public static void main(String[] args)
	{
		Raton tinky = new Raton("Tinky", 4);
		Raton winky = new Raton("Winky", 2);
		Raton poo = new Raton("Pooo", 1);
		Raton lala = new Raton("Lalala", 5);
		
		float time = System.currentTimeMillis();
		
		LocalDateTime tiempo = LocalDateTime.now(); 
		
		tinky.comer();
		winky.comer();
		poo.comer();
		lala.comer();
		
		time = System.currentTimeMillis() - time;
		
		double tiempoSegundos = time / 1000;
		
		System.out.printf("Hemos tardado %.3f segundos %d", tiempoSegundos, time);
		
	}
	
	

}
